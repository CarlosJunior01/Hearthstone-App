<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_3232"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_3232">

        <include
            android:id="@+id/hearthstone_actionbar"
            layout="@layout/fragment_actionbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgCard"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_400_dp"
            android:src="@drawable/hearthstone_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hearthstone_actionbar" />

        <ImageView
            android:id="@+id/img_parchment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/parchment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/img_parchment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCard"
            app:layout_constraintVertical_bias="0.35">

            <TextView
                android:id="@+id/txt_card_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size_16_dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textSize="@dimen/font_size_20_sp"
                android:textStyle="bold"
                tools:text="Card Details..." />

            <TextView
                android:id="@+id/txt_card_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textStyle="bold"
                tools:text="Card Details..."
                app:drawableStartCompat="@drawable/rune" />

            <TextView
                android:id="@+id/txt_card_flavor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textStyle="bold"
                tools:text="Card Details..."
                app:drawableStartCompat="@drawable/rune" />

            <TextView
                android:id="@+id/txt_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textStyle="bold"
                tools:text="Card Details..."
                app:drawableStartCompat="@drawable/rune" />

            <TextView
                android:id="@+id/txt_card_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textStyle="bold"
                tools:text="Card Details..."
                app:drawableStartCompat="@drawable/rune" />

            <TextView
                android:id="@+id/txt_card_faction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textStyle="bold"
                tools:text="Card Details..."
                app:drawableStartCompat="@drawable/rune" />

            <TextView
                android:id="@+id/txt_card_rarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textStyle="bold"
                tools:text="Card Details..."
                app:drawableStartCompat="@drawable/rune" />

            <TextView
                android:id="@+id/txt_card_attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textStyle="bold"
                tools:text="Card Details..."
                app:drawableStartCompat="@drawable/rune" />

            <TextView
                android:id="@+id/txt_card_coast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textStyle="bold"
                tools:text="Card Details..."
                app:drawableStartCompat="@drawable/rune" />

            <TextView
                android:id="@+id/txt_card_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_3232"
                android:textStyle="bold"
                tools:text="Card Details..."
                app:drawableStartCompat="@drawable/rune" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
