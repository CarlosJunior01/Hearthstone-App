<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_8_dp"
    android:elevation="@dimen/size_8_dp"
    app:cardCornerRadius="@dimen/size_8_dp"
    app:cardBackgroundColor="@color/gray_3535">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_24_sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Demon Hunter" />

        <ImageView
            android:id="@+id/img_card_logo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="@dimen/size_16_dp"
            android:contentDescription="@string/accessibility_hearthstone_logo"
            android:src="@drawable/hearthstone_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_card_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>